@model IEnumerable<Projeto_Elite.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Alunos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <h4>Nome</h4>
            </th>
            <th>
                <h4>Média</h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    @item.Media()
            </td>
        </tr>
        
        
}
        <tr>
            <td></td>
            <td></td>
        </tr>
        <tr style="background-color:lightgray">
            <td>
                <b>Média da Turma</b>
            </td>
            <td>
                <b>@(Model.Sum(x => x.Media()) / Model.Count())</b>
            </td>

        </tr>
    </tbody>
</table>
