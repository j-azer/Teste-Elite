@model Projeto_Elite.Models.Arquivo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Arquivo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Data Upload
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataUpload)
        </dd>
        </dd>
        <dt class="col-sm-2">
            Upload
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Upload
        </dd>
        </dd>
        <dt class="col-sm-2">
            Download
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Download
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar a Lista</a>
</div>
