@model IEnumerable<Projeto_Elite.Models.Arquivo>

@{
    ViewData["Title"] = "Index";   
}

<h1>Gerenciamento de Arquivos</h1>
<br/>
<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Imagem
            </th>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Data
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@item.PathThumbnail" alt="Thumbnail" width="60" height="60"/>
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    @item.DataUpload.ToString("dd/MM/yyyy")
            </td>          
            
            <td>
                    <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-secondary">Download</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
